{
  "version": 2,
  "builds": [
    {
      "src": "/package.json", 
      "use": "@vercel/next"
    },
    {
      "src": "/api/*.py", 
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/blogs/(.*)",
      "dest": "/api/main.py" 
    },
    {
      "src": "/api/articles",
      "dest": "/src/app/api/articles/route.ts" 
    },
    {
      "src": "/api/articles/(.*)",
      "dest": "/src//app/api/articles/[slug]/route.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/$1" 
    }
  ]
}