{
  "version": 2,
  "builds": [
    {
      "src": "/api/main.py",   
      "use": "@vercel/python",    
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"  
      }
    },
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/blogs/(.*)",        
      "dest": "/api/main.py"  
    },
    {
      "src": "/api/articles/(.*)",           
      "dest": "/src/app/api/articles/$1"
    }
  ]
}