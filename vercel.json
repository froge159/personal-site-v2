{
  "version": 2,
  "builds": [
    {
      "src": "/api/main.py",   
      "use": "@vercel/python",    
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"  
      }
    },
    {
      "src": "/", 
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",        
      "dest": "/api/main.py"  
    },
    {
      "src": "/(.*)",           
      "dest": "src/$1"
    }
  ]
}